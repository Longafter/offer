.box {
    margin: 20rpx;
    padding-left: 20rpx;
    border-radius: 8rpx;
}
.box .item {
    margin-bottom: 30rpx;
}
.box-name {
    display: flex;
    flex-direction: row;
}
.box-name .input {
    margin-left: 40rpx;
}
.image-wrap {
    width: 440rpx;
    height: 240rpx;
    position: relative;
    margin-top: 20rpx;
}
.image {
    width: 100%;
    height: 100%;
}
.selectphoto {
    width: 440rpx;
    height: 240rpx;
    position: relative;
    border: 2rpx dashed green;
    margin-top: 20rpx;
}
.icon-jiahao {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #cbd1d7;
    font-size: 100rpx;
}
.icon-shanchu {
    position: absolute;
    top: 0;
    right: 0;
    width: 40rpx;
    height: 40rpx;
    background-color: #000;
    opacity: 0.4;
    color: #fff;
    text-align: center;
    line-height: 40rpx;
    font-size: 38rpx;
    font-weight: bolder;
}
button {
    margin-top: 50rpx;
}