page{
  height: 100%;
  width: 100%;
}
.head {
  display: flex;
}
.head view {
  border: 1rpx solid gray;
  width: 50%;
  text-align: center;
  font-size: 50rpx;
}
.head .color {
  background: gray;
}
.body {
  margin: 20rpx;
}
.body .items {
  border: 1px solid green;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  padding-left: 8rpx;
}