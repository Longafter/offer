.container {
    margin: 50rpx 20rpx;
}
.header {
    border: 1px solid green;
    border-radius: 5%;
    padding: 8rpx;
}
.header :last-child .color {
    color: red;
}
.body {
    border: 1px solid green;
    border-radius: 10rpx;
    margin-top: 50rpx;
    padding: 8rpx;
}
.body .offer1, .offer2 {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 40rpx;
    position: relative;
}
.body .offer1 {
    margin-bottom: 20rpx;
}
.offer1 .box1, .offer2 .box1 {
    margin-right: 30rpx;
} 
.offer1 .box2, .offer2 .box2 {
    margin-left: 30rpx;
} 
.body input {
    text-align: right;
    border: 0.5px solid green;
    border-radius: 10rpx;
    width: 300rpx;
    height: 90rpx;
    padding-right: 25rpx;
}
.footer {
    margin-top: 100rpx;
}
.items {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 35rpx;
}
.rank {
    border: 1px solid green;
    border-radius: 10rpx;
    margin-top: 50rpx;
    padding: 8rpx;
}