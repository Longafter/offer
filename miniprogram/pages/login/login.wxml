<view class="container">
</view>
<view class="login_box">
  <view class="section">
    <input placeholder="请输入真实姓名" placeholder-class="color" bindblur='_handleUsername' />
    <image src="https://7069-pintu-game-52d2a-1301643624.tcb.qcloud.la/pintu_icon/username.png"></image>
  </view>
  <view class="section">
    <input type='number' maxlength='11' placeholder="请输入手机号" placeholder-class="color" bindblur='_handleMobile' />
    <image src="https://7069-pintu-game-52d2a-1301643624.tcb.qcloud.la/pintu_icon/mobile.png"></image>
  </view>
  <view class="section">
    <input placeholder="请输入单位名称" placeholder-class="color" bindblur='_handleCompany' />
    <image src="https://7069-pintu-game-52d2a-1301643624.tcb.qcloud.la/pintu_icon/mobile.png"></image>
  </view>
  <view class="section">
    <input placeholder="请输入单位地址" placeholder-class="color" bindblur='_handleComplace' />
    <image src="https://7069-pintu-game-52d2a-1301643624.tcb.qcloud.la/pintu_icon/mobile.png"></image>
  </view>
  <view class="section">
    <input password="true" placeholder="请输入密码" placeholder-class="color" bindblur='_handlePass1' />
    <image src="https://7069-pintu-game-52d2a-1301643624.tcb.qcloud.la/pintu_icon/pass.png"></image>
  </view>
  <view class="section">
    <input password="true" placeholder="确认密码" placeholder-class="color" bindblur='_handlePass2' />
    <image src="https://7069-pintu-game-52d2a-1301643624.tcb.qcloud.la/pintu_icon/pass.png"></image>
  </view>
  <button class="register" type="warn" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">注册</button>
</view>